<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/7Days.css">
    <title>7 Days</title>
</head>
<body>
     {{>Nav}}
    <div class="fixed-section">
        <h1 class="today-heading">Weather for the next week</h1>
        <h2 class="today-instructions">Enter a city &amp country to display weather for the next week</h2>
    
   
        <form class="seven-days-form" action="/7Days" method="POST">
            <label for="city">city</label>
            <input required type="text" name="city">
            <label for="country">country</label>
            <select name="country">
                {{#each countries}}
                <option value={{this.alpha2Code}}>{{this.name}}</option>
                {{/each}}
            </select>
            <button type="submit">search</button>
        </form>
    
    {{#if currentWeatherIcon}}

            <h1 class="city-heading">{{city}}, {{country}}</h1>
    </div>

    <div class="scroll-section">
            <h2 class="local-time"> local time: {{localTime}}</h2>
            <img class="today-image"src="http://openweathermap.org/img/wn/{{currentWeatherIcon}}@2x.png" alt="weather image">
        
            <table class="today">
                <tr>
                    <td>latitude</td>
                    <td>{{latitude}}</td>
                    <td>longitude</td>
                    <td>{{longitude}}</td>
                </tr>
                <tr>
                    <td>sunrise today</td>
                    <td>{{sunriseToday}}</td>
                    <td>sunset today</td>
                    <td>{{sunsetToday}}</td>
                </tr>
                <tr>
                    <td>today's temperature °C</td>
                    <td>{{currentTemp}}</td>
                    <td>feels like °C</td>
                    <td>{{currentFeelsLike}}</td>
                </tr>
                <tr>
                    <td>current humidity</td>
                    <td>{{currentHumidity}}</td>
                    <td>current weather</td>
                    <td>{{currentWeather}}</td>
                </tr>
            </table>

            <h2>Next 7 days</h2>
    {{/if}}

        {{#each daily}}
            <h3 class="daily-heading">{{this.date}}: {{this.weather}}</h3>
            <img class="daily-image" src="http://openweathermap.org/img/wn/{{this.weatherIcon}}@2x.png" alt="weather image">
            <table class="daily">
                <tr>
                    <td>sunrise</td>
                    <td>{{this.sunrise}}</td>
                </tr>
                <tr>
                    <td>sunset</td>
                    <td>{{this.sunset}}</td>
                </tr>
                <tr>
                    <td>temp morn °C</td>
                    <td>{{this.mornTemp}}</td>
                </tr>
                <tr>    
                    <td>min temp day °C</td>
                    <td>{{this.minDayTemp}}</td>
                </tr>
                <tr>    
                    <td>max temp day °C</td>
                    <td>{{this.maxDayTemp}}</td>
                </tr>
                <tr>    
                    <td>temp eve °C</td>
                    <td>{{this.eveTemp}}</td>
                </tr>
                <tr>    
                    <td>temp night °C</td>
                    <td>{{this.nightTemp}}</td>
                </tr>
            </table>
        {{/each}}
    </div>
</body>
</html>